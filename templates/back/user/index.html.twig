{% extends 'base.html.twig' %}


{% block body %}

               {% include('back/_nav_backoffice.html.twig') %}

<div class="container-fluid justify-content-start">
<h2 class="text-center">Liste des utilisateurs </h2>
<a class="btn btn-success " href="{{path ('back_user_add')}}" role="button" aria-disabled="add user"> Ajouter un user</a>


 {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

 <div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>username</th>
                <th>email</th>
                <th>role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for current_user in users %}
            <tr>
                <td>{{ current_user.id }}</td>
                <td>{{ current_user.username }}</td>
                <td>{{ current_user.email }}</td>
                <td>{{ current_user.role }}</td>
               
                <td>
                    <a class="btn btn-success " href="{{path ('back_user_read', {id: current_user.id} )}}" role="button" aria-disabled="edit casting">Voir</a>
                    <a class="btn btn-primary " href="{{path ('back_user_edit', {id: current_user.id} )}}" role="button" aria-disabled="edit casting">Modifier</a>
                    <a class="btn btn-danger " href="{{path ("back_user_delete",{id: current_user.id} )}}" role="button" aria-disabled="edit" onclick="return confirm('Etes vous sur ?');">supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>

</div>

  {% endblock %}