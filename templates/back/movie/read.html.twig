{% extends 'base.html.twig' %}


{% block body %}
               {% include('back/_nav_backoffice.html.twig') %}

<div class="container">
    <h1>Film: {{movie.title}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ movie.duration }}</td>
            </tr>
            <tr>
                <th>Date de sortie</th>
                <td>{{ movie.releasedAt ? movie.releasedAt|date('d/m/Y') : '' }}</td>
            </tr>
             <tr>
                <th>Résumé</th>
                <td>{{ movie.summary }}</td>
            </tr>
             <tr>
                <th>Synopsis</th>
                <td>{{ movie.synopsis }}</td>
            </tr>
