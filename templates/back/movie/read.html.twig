{# {% if movie.seasons.number != "" %} #}
            <tr>
            <th>Saison numéro</th>
                {# <td>{{ movie.season.number }} nombre épisodes: {{ movie.season.episodeCount }}</td> #}
            </tr>

            {# {% endif %}   #}
           

             <tr> 
                <th>Poster</th>
                <td>
                
            {% if movie.poster != "" %}
                    <img style="max-width:100px" src="{{ movie.poster }}" />
            {% else %}
                    <p>Pas d'image définie</p>
            {% endif %}                
                </td>
            </tr>
             <tr>
                <th>Notation</th>
                <td>{{ movie.rating }}</td>
            </tr>
            
            
        </tbody>
    </table>
        <a class="btn btn-primary " href="{{path ('back_movie_edit', {id: movie.id} )}}" role="button" aria-disabled="edit casting">Modifier</a>
        <a class="btn btn-danger " href="{{path ("back_movie_delete",{id: movie.id} )}}" role="button" aria-disabled="edit" onclick="return confirm('Etes vous sur ?');">supprimer</a>


</div>
