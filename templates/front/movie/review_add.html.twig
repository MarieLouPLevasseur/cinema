{% extends 'base.html.twig' %}

{% block title %}Critiquer le film {{ movie.title }}!{% endblock %}

{% block body %}
<h1>Ajouter une critique sur {{ movie }}</h1>
<div class="container">
{# ! on force le no validate: on ne fait jamais confiance aux donn√©es utilisateur #}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_row(form.content) }}
        {{ form_rest(form) }}
        <button class="btn btn-primary">Soumettre</button>
    {{ form_end(form) }}
</div>
{% endblock %}